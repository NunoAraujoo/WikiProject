@model IEnumerable<WikiProject.Domain.Entities.Item>


<h1>Item List</h1>

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Item List</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                </tr>

            </thead>

            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Description</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row pb-3">
            <div class="col-4 text-beggining">
                <a asp-controller="Item" asp-action="" class="btn btn-secondary">
                    <i class="bi bi-plus-square"></i> Create New Item
                </a>
                <a asp-controller="Item" asp-action="" class="btn btn-secondary">
                    <i class="bi bi-x-square"></i> Delete Item
                </a>
            </div>
        </div>
    </div>
</div>