@model IEnumerable<WikiProject.Domain.Entities.Item>

@{
    ViewData["Title"] = "Home Page";
}

<div class="home-banner d-flex flex-column justify-content-center align-items-center">
    <h2 class="justify-content-center display-3 text-center">Item Database</h2>
    <h3 class="text-body-secondary text-center">Check the information about all your items</h3>
    <a asp-area="" asp-controller="Item" asp-action="Index" class="btn btn-lg btn-primary ">See Items</a>
</div>

<section>
    <div class="text-center">
        <h1 class="display-4">Objective of this Database</h1>
        <p>
            This Database is here to help you read and learn about your favourite Items, used and found inside your D&D adventure.
        </p>
    </div>
</section>

 